<div
  id="spinner"
  class="absolute bg-white bg-opacity-60 z-10 h-full w-full flex items-center justify-center hidden"
>
  <div class="flex items-center">
    <span class="text-3xl mr-4">Loading</span>
    <svg
      class="animate-spin h-8 w-8 text-gray-800"
      xmlns="http://www.w3.org/2000/svg"
      fill="none"
      viewBox="0 0 24 24"
    >
      <circle
        class="opacity-25"
        cx="12"
        cy="12"
        r="10"
        stroke="currentColor"
        stroke-width="4"
      ></circle>
      <path
        class="opacity-75"
        fill="currentColor"
        d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"
      >
      </path>
    </svg>
  </div>
</div>
<h1 class="text-bold text-xl text-white neon-text">Products</h1>
{{#with user}}
  <h2 class="text-bold text-md text-white neon-text">Welcome!
    {{firstName}}
    {{lastName}}</h2>
  <h3 class="text-bold text-sm text-white neon-text">Role: {{role}}</h3>
  <div class="flex gap-4 mt-4">
    <a
      class="text-bold text-sm text-white neon-text hover:underline"
      href="{{clientUrl}}/profile"
    >PROFILE
    </a>
    {{#if (isAdmin role)}}
      <a
        class="text-bold text-sm text-white neon-text hover:underline"
        href="{{clientUrl}}/users"
      >
        USERS
      </a>
    {{/if}}
    <a
      class="text-bold text-sm text-white neon-text hover:underline"
      href="{{clientUrl}}/carts/{{cart}}"
    >CART</a>
    <span class="text-red-500">{{productQuantity}}</span>
  </div>
{{/with}}

{{! Filters }}
<section class="border-y-2 border-blue-300">
  <form id="filterForm">
    <div class="flex gap-2 justify-center items-center">
      <div>
        <label
          class="block text-white text-sm font-bold mb-2"
          for="limit"
        >Limit</label>
        <select
          name="limit"
          id="limit"
          class="shadow border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
        >
          <option value="10" selected>10</option>
          <option value="5">5</option>
          <option value="2">2</option>
        </select>
      </div>
      <div>
        <label
          class="block text-white text-sm font-bold mb-2"
          for="category"
        >Category</label>
        <input
          class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
          id="category"
          name="category"
          type="text"
          placeholder="category"
          list="categories"
        />
        <datalist id="categories">
          <option value="remeras"></option>
          <option value="buzos"></option>
          <option value="pantalones"></option>
        </datalist>
      </div>
      <div>
        <label class="block text-white text-sm font-bold mb-2" for="sort">Sort
          Price</label>
        <select
          name="sort"
          id="sort"
          class="shadow border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
        >
          <option value="asc" selected>Low to High</option>
          <option value="desc">High to Low</option>
        </select>
      </div>
      <div>
        <label
          class="block text-white text-sm font-bold mb-2"
          for="status"
        >Status</label>
        <select
          name="status"
          id="status"
          class="shadow border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
        >
          <option value="true" selected>Active</option>
          <option value="false">Inactive</option>
        </select>
      </div>
      <button
        class="bg-blue-500 mt-6 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline"
        type="submit"
      >Filter</button>
      <button
        id="clearFiltersButton"
        class="bg-blue-500 mt-6 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline"
        type="button"
      >Clear Filters</button>
    </div>
  </form>
</section>

{{! Products list }}
<ul class="grid sm:grid-cols-2 md:grid-cols-3 grid-cols-1 gap-4">
  {{#each docs}}
    <li class="bg-gray-800 shadow-lg rounded-lg p-8 max-w-sm w-full">
      <h2 class="text-3xl text-center text-white mb-4">{{this.title}}</h2>
      <p class="text-gray-300 mb-4">{{this.description}}</p>
      <p class="text-blue-300 mb-4">Category: {{this.category}}</p>
      <div class="flex justify-center">
        <a href="{{clientUrl}}/products/{{this.id}}">
          <button
            class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline mr-4"
            type="button"
          >See More</button>
        </a>
        <button
          onclick="addProductToCart('{{this.id}}');"
          class="bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline"
          type="button"
        >Add to Cart</button>
      </div>
    </li>
  {{else}}
    <p>No products</p>
  {{/each}}
</ul>
<p class="mt-4 text-md text-white neon-text">Total Pages: {{totalPages}}</p>

{{! Pagination }}
<ul class="inline-flex -space-x-px">
  {{#if hasPrevPage}}
    <a
      class="cursor-pointer px-3 py-2 ml-0 leading-tight text-gray-500 bg-white border border-gray-300 rounded-l-lg hover:bg-gray-100 hover:text-gray-700"
      href="{{clientUrl}}/products?page={{prevPage}}&limit={{limit}}&category={{category}}&status={{status}}&sort={{sort}}"
    > Previous </a>
  {{/if}}
  <li
    class="cursor-pointer px-3 py-2 leading-tight text-gray-500 bg-white border border-gray-300 hover:bg-gray-100 hover:text-gray-700"
    href=""
  >{{page}}</li>

  {{#if hasNextPage}}
    <a
      class="cursor-pointer px-3 py-2 leading-tight text-gray-500 bg-white border border-gray-300 rounded-r-lg hover:bg-gray-100 hover:text-gray-700"
      href="{{clientUrl}}/products?page={{nextPage}}&limit={{limit}}&category={{category}}&status={{status}}&sort={{sort}}"
    >Next</a>
  {{/if}}
</ul>
<script src="../../static/config.js"></script>
<script src="../../static/index.js"></script>
{{!-- prettier-ignore --}}
<script>
  function onFilterFormSubmit(e) {
    e.preventDefault(); 
    const data = Object.fromEntries(new FormData(e.target)); 
    location.href = 
      `${constants.clientUrl}/products/?page=1&limit=${data.limit}&category=${data.category}&status=${data.status}&sort=${data.sort}`
  }

  function clearFilters() {
    location.href = `${constants.clientUrl}/products/?page=1&limit=10&category=&status=true&sort=`
  } 
  document.getElementById("filterForm").addEventListener("submit", onFilterFormSubmit);
  document.getElementById("clearFiltersButton").addEventListener("click", clearFilters);
</script>