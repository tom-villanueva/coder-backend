<h1 class="text-bold text-xl">Product Detail</h1>
{{#with product}}
  <section class="flex">
    {{!-- <img src={{thumbnail}} alt="product image" /> --}}
    <div class="p-2 border-2 border-blue-100 border-opacity-100 py-4">
      <p>Name: {{title}}</p>
      <p>Description: {{description}} </p>
      <p>Category: {{category}} </p>
      <p>Stock: {{stock}} </p>
      <p> ${{price}}</p>
      <button
        onclick="addProductToCart('{{id}}');"
        class="py-2.5 px-5 mr-2 mb-2 text-sm font-medium text-blue-900 focus:outline-none bg-blue-200 rounded-lg border border-blue-200 hover:bg-blue-100 hover:text-blue-700 focus:z-10 focus:ring-4 focus:ring-blue-200"
      >Add to cart</button>
    </div>
  </section>
{{/with}}
<script src="../../static/index.js"></script>